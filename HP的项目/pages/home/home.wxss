@font-face {
  font-family: 'Xingkai';
  src: url('/static/fonts/xingkai.ttf');
}

.container {
  height: 100vh;
  background: #000000;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  margin-top: 80rpx;
  width: 100%;
  text-align: center;
  font-family: 'Xingkai';
  font-size: 56rpx;
  color: #e0e0e0;
  flex-shrink: 0;
}

.card-container {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  gap: 60rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
}

.action-card {
  width: 320rpx;
  height: 420rpx;
  background: rgba(30,30,30,0.95);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 30rpx rgba(255,255,255,0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s;
}

.action-card:active {
  transform: scale(0.96);
}

.card-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  filter: invert(100%);
}

.card-text {
  font-size: 32rpx;
  color: #d0d0d0;
  font-weight: 500;
}

.disclaimer {
  margin-bottom: 60rpx;
  width: 100%;
  text-align: center;
  font-size: 24rpx;
  color: #808080;
  padding: 0 40rpx;
}