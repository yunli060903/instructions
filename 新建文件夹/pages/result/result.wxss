.container {
  height: 100vh;
  background: orange; /* 修改背景颜色为橙色 */
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
}

.text-container {
  width: 100%;
  text-align: center; /* 文本居中 */
}

.content-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #333333;
  white-space: pre-wrap;
}